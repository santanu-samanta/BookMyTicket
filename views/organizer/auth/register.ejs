  <style>
    /* Smooth fade-in for form inputs */
    #companyForm input,
    #companyForm select {
      transition: border-color 0.3s ease, box-shadow 0.3s ease;
    }

    #companyForm input:focus,
    #companyForm select:focus {
      border-color: #dc3545;
      box-shadow: 0 0 8px rgba(220, 53, 69, 0.6);
      outline: none;
    }

    /* Button hover animation */
    #companyForm button.btn-danger {
      transition: background-color 0.3s ease, transform 0.2s ease;
    }

    #companyForm button.btn-danger:hover {
      background-color: #b02a37;
      transform: scale(1.05);
    }

    /* Video overlay darken */
    section.position-relative video {
      filter: brightness(0.5);
    }

    /* Text container fade-in */
    .text-white h2,
    .text-white h5,
    .text-white p {
      opacity: 0;
      transform: translateY(20px);
      animation-fill-mode: forwards;
      animation-duration: 1s;
    }

    .text-white h2 {
      animation-name: fadeInUp;
      animation-delay: 0.2s;
    }

    .text-white h5 {
      animation-name: fadeInUp;
      animation-delay: 0.4s;
    }

    .text-white p {
      animation-name: fadeInUp;
      animation-delay: 0.6s;
    }

    @keyframes fadeInUp {
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
  </style>
  <!-- SweetAlert2 -->
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>

<body style="background-color: rgb(205, 218, 213);">
  <header id="site-header" class="w3l-header fixed-top">
    <%- include('../../layout/user_layout/navbar.ejs') %>
  </header>

  <section class="position-relative">
    <video autoplay muted loop playsinline
      class="w-100 h-100 position-absolute top-0 start-0 object-fit-cover">
      <source src="/your-video.mp4" type="video/mp4" />
      Your browser does not support the video tag.
    </video>

    <div id="mainContent">
      <div class="position-relative text-white d-flex align-items-center justify-content-between vh-100 text-center"
        style="top: 30px;">
        <div style="width: 40%; margin-left: 50px;" data-aos="fade-right" data-aos-duration="1000">
          <h2>Streamline Your Entertainment Needs</h2>
          <h5>Exclusive Movie & Event Booking Solutions for Businesses and Organizations</h5>
          <p>Enhance employee engagement, reward clients, or host seamless corporate outings with our dedicated
            corporate ticketing platform.
            Join hundreds of companies who trust us to handle their entertainment logistics professionally and
            efficiently.</p>
        </div>
        <div style="width: 25%; margin-right: 100px; background-color: rgb(76, 74, 74); border-radius: 10px;"
          data-aos="fade-left" data-aos-duration="1000" data-aos-delay="300">
          <h4 style="padding: 20px 10px;">Company Registration</h4>

          <form id="companyForm" style="padding: 0px 20px; border-radius: 10px;">
            <div class="row text-white">
              <div class="col-12">
                <div class="input-group mb-4">
                  <input type="text" class="form-control p-3" id="company_name" placeholder="Company Name"
                    name="company_name" required />
                </div>
              </div>
              <div class="col-12">
                <div class="input-group mb-4">
                  <select class="form-control" name="company_type" id="company_type" required>
                    <option value="" disabled selected>Select Company Type</option>
                    <option value="Production House">Production House</option>
                    <option value="Event Management">Event Management</option>
                    <option value="Theatre Company">Theatre Company</option>
                    <!-- <option value="Sports Academy">Sports Academy</option> -->
                    <!-- <option value="Adventure Club">Adventure Club</option> -->
                    <!-- <option value="Fitness Center">Fitness Center</option> -->
                    <option value="Stadium Management">Stadium Management</option>
                    <!-- <option value="Ticketing Partner">Ticketing Partner</option> -->
                    <!-- <option value="Drama Club">Drama Club</option> -->
                    <!-- <option value="Multiplex Chain">Multiplex Chain</option> -->
                  </select>
                </div>
              </div>
              <div class="col-12">
                <div class="input-group mb-4">
                  <input type="number" class="form-control p-3" id="phone" placeholder="Enter Your Number" name="phone"
                    required />
                </div>
              </div>
              <div class="col-12">
                <div class="input-group mb-4">
                  <input type="email" class="form-control p-3" id="email" placeholder="Enter Your Email" name="email"
                    required />
                </div>
              </div>
              <div class="col-6">
                <div class="input-group mb-4">
                  <input type="text" class="form-control p-3" id="city" placeholder="Enter Your City" name="city"
                    required />
                </div>
              </div>
              <div class="col-6">
                <div class="input-group mb-4">
                  <input type="text" class="form-control p-3" id="state" placeholder="Enter Your State" name="state"
                    required />
                </div>
              </div>
              <div class="col-6">
                <div class="input-group mb-4">
                  <input type="text" class="form-control p-3" id="pin" placeholder="Enter Your Pin" name="pin" required />
                </div>
              </div>
              <div class="col-6">
                <div class="input-group mb-4">
                  <input type="text" class="form-control p-3" id="landmark" placeholder="Landmark" name="landmark"
                    required />
                </div>
              </div>
              <div class="col-12">
                <div class="d-grid" style="padding: 0px 0px 30px 0px;">
                  <button type="submit" class="btn btn-danger btn-lg">Receive a Call Back</button>
                </div>
              </div>
            </div>
          </form>

        </div>
      </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.js"></script>

    <script>
      AOS.init();

      $('#companyForm').submit(function (e) {
        e.preventDefault();

        const formData = new FormData(this);
        $.ajax({
          url: '/organizer/registerdata',
          type: 'POST',
          data: formData,
          processData: false,
          contentType: false,
          success: function (response) {
            $('#mainContent').html(`<div class="position-relative text-center text-white vh-100 d-flex align-items-center justify-content-center">
                <div>
                  <h1>Thank You!</h1>
                  <h4>Weâ€™ve received your request. Our team will contact you shortly.</h4>
                </div>
              </div>`);
          },
          error: function (xhr) {
            try {
              const res = JSON.parse(xhr.responseText);
              alert(res.message || "Something went wrong!");
            } catch (e) {
              alert("Unexpected error occurred.");
            }
          }
        });
      });
    </script>

