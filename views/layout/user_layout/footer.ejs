  <!-- Back to top button -->
  <button 
    onclick="topFunction()" 
    id="movetop" 
    class="btn btn-primary position-fixed bottom-0 end-0 m-4 shadow-lg rounded-circle" 
    title="Go to top" 
    aria-label="Scroll to top"
    style="display:none; width:48px; height:48px; z-index: 1050;">
    <i class="fa fa-arrow-up"></i>
  </button>

  <script>
    // Show button on scroll
    window.onscroll = function () {
      const btn = document.getElementById("movetop");
      btn.style.display = (document.documentElement.scrollTop > 100) ? "block" : "none";
    };

    // Smooth scroll to top
    function topFunction() {
      window.scrollTo({ top: 0, behavior: 'smooth' });
    }
  </script>

  <style>
